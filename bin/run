#!/usr/bin/env ruby

require 'bundler/setup'
require 'pry'

$LOAD_PATH.unshift File.expand_path('.', 'lib')

require 'main'
require 'handlers/option_parser'

opts = Handlers::OptionParser.call(ARGV)
begin
  Main.call(height: opts.height, width: opts.width, render_table: opts.render_table)
rescue Interrupt
  puts "\nExiting..."
end
